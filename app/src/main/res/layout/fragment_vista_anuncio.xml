<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/windowBackground"
    android:orientation="vertical"
   >

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ficha_imagen"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/no_image" />

    <TextView
        android:id="@+id/anuncioTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textSize="25dp"
        android:gravity="center_horizontal"
        android:text=""
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <LinearLayout
        style="@style/InfoBox" >

        <TextView
            android:layout_marginLeft="10dp"
            android:text="Tipo anuncio: "
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/anuncioTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textSize="15dp"

            android:text=""

            android:textColor="@android:color/secondary_text_light"
            android:textAppearance="@android:style/TextAppearance.Medium" />
    </LinearLayout>
    <LinearLayout
        style="@style/InfoBox" >

        <TextView
            android:layout_marginLeft="10dp"
            android:text="Especie: "
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/anuncioEspecie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textSize="15dp"

            android:text=""

            android:textColor="@android:color/secondary_text_light"
            android:textAppearance="@android:style/TextAppearance.Medium" />
    </LinearLayout>


    <LinearLayout
        style="@style/InfoBox" >

        <TextView
            android:id="@+id/lblPrecio"
            android:layout_marginLeft="10dp"
            android:text="Precio: "
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/anuncioPrecio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textSize="15dp"
        
        android:text=""

        android:textColor="@android:color/secondary_text_light"
        android:textAppearance="@android:style/TextAppearance.Medium" />
</LinearLayout>
    <LinearLayout
        style="@style/InfoBox" >

        <TextView
            android:layout_marginLeft="10dp"
            android:text="Email: "
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/anuncioEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textSize="15dp"

            android:text=""

            android:textColor="@android:color/secondary_text_light"
            android:textAppearance="@android:style/TextAppearance.Medium" />
    </LinearLayout>


    <LinearLayout
        style="@style/InfoBox" >

        <TextView
            android:layout_marginLeft="10dp"
            android:text="Estado: "
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/anuncioEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textSize="15dp"
            
            android:text=""

            android:textColor="@android:color/secondary_text_light"
            android:textAppearance="@android:style/TextAppearance.Medium" />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/layout_descripcion"
        android:orientation="vertical"
        >

         <TextView
             android:padding="7dp"
             android:textColor="@android:color/black"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text=""
             android:id="@+id/anuncioDescripcion" />

        </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/darker_gray"/>


    <Button
        android:id="@+id/solicitarInformacion"
        android:text="Solicitar informaciÃ³n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/cerrarAnuncio"
        android:text="Finalizar trato anuncio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/compartirAnuncio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compartir anuncio" />

</LinearLayout>
    </ScrollView>